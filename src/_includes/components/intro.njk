    <section class="section section--intro" id="what-do-i-do">
      <div class="section__content">
        <div class="section__content__wrapper">
          <div class="long-contained-copy">
            {% if intro | i18n('headline', lang) %}
              <p class="headline is-title-headline has-accent-font animated-element">{{ intro | i18n('headline', lang) }}</p>
            {% endif %}
            {% if intro | i18n('title', lang) %}
              <h2 class="title is-accent-headline animated-element">{{ intro | i18n('title', lang) }}</h2>
            {% endif %}
            <div class="animated-element">
              {%- for paragraph in intro | i18n('description', lang) | newline2br(false) %}
              <p>{{ paragraph | safe }}</p>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </section>
